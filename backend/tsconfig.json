{
  "compilerOptions": {
    "outDir": "./dist",                                // Output directory for compiled files
    "module": "ESNext",                                // Set to ESNext for modern JS modules
    "target": "ESNext",                                // Target modern JavaScript
    "esModuleInterop": true,                           // Enable interop between CommonJS and ES Modules
    "strict": true,                                    // Enable strict type checking
    "skipLibCheck": true,                             // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,        // Ensure consistent casing in imports
    "moduleResolution": "node"                         // Ensure proper module resolution
  },
 "include": [
  "controllers/**/*.ts",
  "routes/**/*.ts",
  "models/**/*.ts",
  "repositories/**/*.ts",  // Include repositories
  "server.ts",
  "services.ts",
  "config.ts"
  ], // Include these directories for compilation
  "exclude": ["node_modules"]                         // Exclude node_modules
}
